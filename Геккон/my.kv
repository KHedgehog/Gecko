<FirstScreen>:
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 0.2, 0.7, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        MDLabel:
            text: "0"
            font_style: "H6"
            font_size: "70sp"
            theme_text_color: "Custom"
            text_color: 1, 1, 0, 1
            size_hint: (.3, .3)
            pos_hint: {'x':.70, 'y':.77}

        Image:
            source: 'star.png'
            size_hint: (.15, .15)
            pos_hint: {'x':.80, 'y':.85}

        Image:
            source: 'monster.png'
            size_hint: (.15, .15)
            pos_hint: {'x':.80, 'y':.65}

        MDLabel:
            text: 'Меню'
            halign: "center"
            font_style: "H6"
            font_size: "40sp"
            size_hint: (.5, .25)
            pos_hint: {'x':.25, 'y':.60}

        MDFillRoundFlatButton:
            text: 'Учим слоги'
            font_style: "H6"
            font_size: "30sp"
            on_press: root.manager.current = 'second'
            size_hint: (.5, .15)
            pos_hint: {'x':.15, 'y':.45}

        MDFillRoundFlatButton:
            text: 'Играем со словами'
            font_style: "H6"
            font_size: "30sp"
            on_press: root.manager.current = 'play'
            size_hint: (.5, .15)
            pos_hint: {'x':.15, 'y':.25}

        MDFillRoundFlatButton:
            text: 'Составляем текст \n и предложения'
            font_style: "H6"
            font_size: "30sp"
            on_press: root.manager.current = 'sentens'
            size_hint: (.5, .15)
            pos_hint: {'x':.15, 'y':.05}

